div(ng-controller="EditorController" class="modal fade", id="settingsModal", tabindex="-1", role="dialog", aria-labelledby="myModalLabel")
      div(class="modal-dialog", role="document")
        div.modal-content
          div.modal-header
            button(type="button", class="close", data-dismiss="modal", aria-label="close")
              span(aria-hidden="true") &times;
            h4(class="modal-title", id="myModalLabel").
                Modal title 
          div.modal-body
            input(type="text", name="name", placeholder="name")
            br 
            select(ng-options="theme as theme.name for theme in themes" ng-model="currentTheme" ng-change="setTheme()")
            select(ng-options="mode as mode.name for mode in modes" ng-model="currentMode" ng-change="setMode()")
          div.modal-footer
            button(type="button", class="btn btn-default" data-dismiss="modal").
              close
            button(type="button", class="btn btn-primary").
              save changes