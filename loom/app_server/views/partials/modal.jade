div(ng-controller="EditorController" class="modal fade", id="settingsModal", tabindex="-1", role="dialog", aria-labelledby="myModalLabel")
      div(class="modal-dialog", role="document")
        div.modal-content
          div.modal-header
            button(type="button", class="close", data-dismiss="modal", aria-label="close")
              span(aria-hidden="true") &times;
            h4(class="modal-title", id="myModalLabel").
                Modal title 
          div.modal-body
            input(type="text", name="name", placeholder="name")
            br 
            select(name="mode")
              option(ng-repeat="theme in themes" value="theme.name") {{theme.name}}
            select(name="language")
              option(ng-repeat="mode in modes" value="mode.name") {{mode.name}}
          div.modal-footer
            button(type="button", class="btn btn-default" data-dismiss="modal").
              close
            button(type="button", class="btn btn-primary").
              save changes